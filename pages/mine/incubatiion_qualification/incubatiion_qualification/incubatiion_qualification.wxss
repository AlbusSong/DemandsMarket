.submitPageTableview {
  background-color: #fff;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 50px;
  width: 100%;
}

.functionArea {
  background-color: #f1f1f7;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  box-sizing:border-box;
}

.submitPageTableviewCell {
  background-color: #fff;
  height: 40px;  
  font-size: 15px;
  color: #333;
  position: relative;
  top: 0px;
  left: 0px;
  right: 0px;
}

.submitPageTableviewCellTitle {
  background-color: #fff;
  height: 100%;
  line-height: 40px;
  width: 40%;
  display: inline-block;
  position: absolute;
  left: 10px;
  top: 0px;
  white-space: nowrap;
  font-size: 13px;
}

.submitPageTableviewCellTextInput {
  background-color: #fff;
  height: 100%;
  width: 58%;
  /* margin-right: 10px; */
  position: absolute;
  right: 10px;
  top: 0px;
  text-align: right;
  display: inline-block;
  line-height: 40px;
}

.submitPageTableviewCellDateInput {
  background-color: #fff;
  height: 100%;
  width: 58%;
  /* margin-right: 10px; */
  position: absolute;
  right: 10px;
  top: 0px;
  text-align: right;
  display: inline-block;
  line-height: 40px;
}

.separatorLine {
  background-color: #f1f1f7;
  height: 1px;
}

button[type="submit"]{
  background-color: #a11212;
  color: #fff;
  border-radius: 6px;
  height: 40px;
  margin: 5px 10px;
  text-align: center;
  font-size: 16px;
}

button.submit-button-hover {
  background-color: #df5454;
}

.ocrButtonArea {
  background-color: #fff;
  width: 100%;
  height: 100px;  
}

button[type="ocr"]{
  background-color: #f1f1f7;
  color: #333;
  border-radius: 0px;
  border-width: 2px;
  border-color: #999;
  height: 80px;
  position: absolute;
  left: 10px;
  top: 10px;
  right: 10px;
  bottom: 10px;
  text-align: center;
  font-size: 20px;
  flex-wrap: wrap;
  white-space: pre-wrap;
  line-height: 80px;
}

button.ocr-button-hover {
  background-color: #e1e1e7;
}
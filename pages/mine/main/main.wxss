/* pages/mine/main/main.wxss */

.minePortraitView {
  background-color: #fff;
  width: 100%;
  text-align: center;
}

.minePortraitImage {
  background-color: #f1f1f7;
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-top: 20px;
}

.mineMainCell {
  background-color: #fff;
  height: 35px;
  width: 100%;
  color: #666;
  font-size: 15px;
  position: relative;
  right: 0;
  top: 0;
}

.mineMainCellTitle {
  background-color: #fff;
  line-height: 35px;
  width: 33%;
  padding-left: 15px; 
  display: inline-block;   
}

.mineMainCellSubtitle {
  background-color: #fff;
  line-height: 35px;
  width: 55%;
  display: inline-block;  
}

.mineMainCellSubtitleArrow {
  background-color: #fff;
  position: absolute;
  right: 5px;
  top: 2px;
  color: #999;
}
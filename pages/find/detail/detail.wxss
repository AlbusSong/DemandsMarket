/* pages/find/detail/detail.wxss */

.tableviewArea {
  background-color: #fff;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 50px;
  width: 100%;
}

.functionArea {
  background-color: #f1f1f7;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.titleCell {
  background-color: #fff;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 7px;
  padding-bottom: 7px;
  font-size: 16px;
  font-weight: 500;
  color: #222;  
}

.subtitleCell {
  background-color: #fff;
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 7px;
  padding-bottom: 7px;
  font-size: 12px;
  color: #333;
  overflow-wrap: break-word;
}

.detailCell {
  background-color: #fff;
  font-size: 13px;
  color: #333;
  padding: 10px;
}

button[type="match_demand"]{
  display: inline-block;
  background-color: #a83933;
  height: 40px;
  width: 45%;
  border-radius: 6px;
  color: #fff;
  text-align: center;
  font-size: 16px;
  margin-right: 5px;
}

button.match_demand-button-hover {
  background-color: #df5454;
}

button[type="share"]{
  display: inline-block;
  text-align: center;
  background-color: #a83933;
  height: 40px;
  width: 45%;
  border-radius: 6px;
  font-size: 16px;
  color: #fff;
  margin-left: 5px;
}

button.share-button-hover {
  background-color: #df5454;
}
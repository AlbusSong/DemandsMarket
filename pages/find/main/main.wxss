@import "../main/filter/filter.wxss";
@import "../../../others/view/loadmore/loadmore.wxss";

.find_main_top_searchbar {
  position: absolute;
  width: 100%;
  height: 40px;
  top: 0px;
  left: 0px;
  background-color: #ffffff;
}

.find_main_top_searchbar_area {
  position: absolute;
  top: 3px;
  height: 32px;
  left: 10px;
  right: 10px;
  background-color: #ffffff;
  border-radius: 5px;
  border: 1pt solid #ccc;
}

.find_main_top_searchbar_area_search_icon {
  position: absolute;
  top: 3px;
  right: 3px;
}

.find_main_top_searchbar_area_input {
  width: 100%;
  height: 100%;
  font-size: 13px;
  text-indent: 3px;
  color: #333333;
  background-color: #ffffff;
}

.find_main_top_image {
  position: absolute;
  width: 100%;
  height: 100px;
  top: 20px;
  left: 0px;  
}

.find_main_top_image_img {
  background-color: #eeeeee;
}

.demand_market_filter_function_area {
  background-color: #fff;
  height: 40px;
  width: 100%;
  position: absolute;
  top: 140px;
}

.demand_market_filter_function_item {
  background-color: #fff;
  display: inline-block;
  width: 25%;
  font-size: 13px;
  /* position: relative;
  left: 10px; */
}

.demand_market_tableview {
  background-color: #ffffff;
  position: absolute;
  left: 0px;
  width: 100%;
  bottom: 0px;
  top: 180px;
}

.demand_market_tableview_cell {
  background-color: #ffffff;
  left: 0px;
  width: 100%;
  /* height: 100px; */
  position: relative;
}

.demand_market_tableview_cell_title {
  font-size: 16px;
  margin-left: 10px;
  padding-top: 10px;
  padding-bottom: 5px;
  margin-right: 10px;
  color: #333333;
}

.demand_market_tableview_cell_subtitle {
  font-size: 13px;
  color: #666666;
  padding-left: 10px;  
}

.demand_market_tableview_cell_subtitle_inline {
  width: 50%;
  font-size: 13px;
  color: #666666;
  position: relative;
  left: 10px;
  /* padding-left: 10px; */
  /* margin-left: 10px; */
  display: inline-block;
}
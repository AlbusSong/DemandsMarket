/* pages/post/create/create.wxss */

@import "./selectSpecialitiesView/selectSpecialitiesView.wxss";

.demandTitleCell {
  background-color: #fff;  
  width: 100%;
  height: 40px;
  /* display: inline-block; */
  color: #333;  
  font-size: 15px;  
}

.demandTitleCellInput {
  background-color: #fff;
  display: inline-block;
  width: 65%;
  height: 40px;
  text-align: right;
}

.demandDescriptionCell {
  background-color: #fff;
  height: 200px;
  color: #333;
  font-size: 15px;
}

.demandDescriptionCellTextArea {
  background-color: #fff;
  padding-left: 10px;
  padding-right: 10px;
  /* padding-top: 10px; */
  /* padding-bottom: -5px; */
  box-sizing: border-box;
  font-size: 15px;
  color: #333;
  width: 100%;
  height: 160px;
  word-wrap: break-word;
}

.demandExpireDateCell {
  background-color: #fff;
  height: 40px;
}

.chooseSpecialityCell {
  background-color: #fff;
  min-height: 40px;
  width: 100%;
  font-size: 15px;
  color: #333;
}

.chooseSpecialityCellContent {
  background-color: #fff;
  min-height: 35px;
  color: #666;
  font-size: 15px;
  padding-left: 10px;
  padding-top: 10px;
}

button[type="submit"]{
  background-color: #a11212;
  color: #fff;
  border-radius: 6px;
  height: 40px;
  margin: 10px;
  text-align: center;
  font-size: 16px;
}

button.submit-button-hover {
  background-color: #df5454;
}